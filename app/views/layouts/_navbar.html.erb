<% if current_user %>
  <div class="top-bar">
    <nav class="top-nav">
      <ul>
        <li><a href="/users/<% "#{current_user.id}" %>"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="#"><i class="fa fa-bolt"></i> Moments</a></li>
        <li><a href="#"><i class="fa fa-bell-o"></i> Notifications</a></li>
        <li><a href="#"><i class="fa fa-envelope-o"></i> Messages</a></li>
      </ul> 
    </nav>
    <span class="icon"></span>
